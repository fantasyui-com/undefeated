  <body>


  {{#each page}}

    <div class="page-break-after">
      <div class="container-fluid">
        <div class="row">

          {{#each stack}}
          <div class="col-6 m-0">

            <div class="card m-3" style="height: 35vh;">

              <div style="position: absolute; top: 1rem; left: 1rem;">
                <i class="fa fa-{{icon}} fa-2x"></i>
              </div>
              <!-- <div style="position: absolute; bottom: 1rem; right: 1rem;">
                <i class="fa fa-{{icon}} fa-2x"></i>
              </div> -->

              <div class="card-body" style="position: relative;">

                <p class="card-text" style="margin-left: 1rem; padding: 0 2rem;">
                {{#if type}} {{type}}: {{/if}}
                {{content}}</p>
                <hr>
                <p class="card-text small text-center" style="position: absolute; width:100%; bottom: 1rem; padding: 0 4.5rem;">{{next}}</p>

              </div>
            </div>

          </div>
         {{/each}}

      </div>
    </div>
  </div>

  {{/each}}


